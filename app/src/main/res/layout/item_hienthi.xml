<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:descendantFocusability="blocksDescendants"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <View
        android:background="#E7DBDB"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="100dp"/>

    <ImageView
        android:src="@drawable/ic_adb_black_24dp"
        android:id="@+id/img"
        android:layout_marginLeft="15dp"
        android:layout_marginBottom="10dp"
        android:elevation="6dp"
        android:layout_width="80dp"
        android:scaleType="fitXY"
        android:layout_height="100dp"/>
    <LinearLayout
        android:layout_toRightOf="@+id/img"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginTop="20dp"
                android:textSize="13sp"
                android:text="Tên món:"
                android:layout_toRightOf="@+id/img"
                android:layout_marginLeft="13dp"
                android:textStyle="bold"
                android:id="@+id/txtten"
                android:layout_width="70dp"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_marginTop="20dp"
                android:id="@+id/txttenmon"
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="13dp"
                android:layout_toRightOf="@+id/txtten"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="Tên món ăn"
                android:textSize="13sp"
                android:textStyle="bold" />

            <ImageButton
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/txttenmon"
                android:scaleType="fitXY"
                android:src="@drawable/ic_mode_edit" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_marginTop="20dp"
                android:textSize="13sp"
                android:text="Giá:"
                android:layout_toRightOf="@+id/img"
                android:layout_marginLeft="13dp"
                android:textStyle="bold"
                android:layout_width="70dp"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_marginTop="20dp"
                android:id="@+id/txtgia"
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="13dp"
                android:layout_toRightOf="@+id/txtten"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="100000 vnd"
                android:textSize="13sp"
                android:textStyle="bold" />

            <ImageButton

                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/txttenmon"
                android:scaleType="fitXY"
                android:src="@drawable/ic_clear" />
        </LinearLayout>
    </LinearLayout>


</RelativeLayout>